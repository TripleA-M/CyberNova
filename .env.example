# Copy this file to .env and fill in real values.
# Never commit your real secrets.

# Discord webhook used by the Node relay (server.js)
DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/REPLACE_WITH_YOUR_WEBHOOK_ID/TOKEN"

# Optional: role ID to mention in Discord alerts (server.js)
# ADMIN_ROLE_ID=123456789012345678

# Optional: override server port for server.js
# PORT=3000

# Flask application secret key (use a long random string)
SECRET_KEY=change_me_super_random

# Flask SUDO credentials for dashboard access
SUDO_EMAIL=admin@example.com
SUDO_PASSWORD=change_me_strong_password

# Flask -> Node relay URL for sending alerts
DISCORD_PROXY_URL=http://localhost:3000/send-to-discord
